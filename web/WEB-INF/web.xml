<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CtrVentas</servlet-name>
        <servlet-class>Controller.CtrVentas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrProductos</servlet-name>
        <servlet-class>Controller.CtrProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrClientes</servlet-name>
        <servlet-class>Controller.CtrClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrDepartamentos</servlet-name>
        <servlet-class>Controller.CtrDepartamentos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrLogin</servlet-name>
        <servlet-class>Controller.CtrLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrCompras</servlet-name>
        <servlet-class>Controller.CtrCompras</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CtrVentas</servlet-name>
        <url-pattern>/CtrVentas.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrProductos</servlet-name>
        <url-pattern>/CtrProductos.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrClientes</servlet-name>
        <url-pattern>/CtrClientes.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrDepartamentos</servlet-name>
        <url-pattern>/CtrDepartamentos.do</url-pattern>
    </servlet-mapping>
    <!--servlet enrutador-->
    <servlet>
        <servlet-name>router</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>router</servlet-name>
        <url-pattern>/categorias</url-pattern>
        <url-pattern>/ventas</url-pattern>
        <url-pattern>/productos</url-pattern>
        <url-pattern>/inicio</url-pattern>
        <url-pattern>/crear-venta</url-pattern>
        <url-pattern>/crear-compra</url-pattern>
        <url-pattern>/compras</url-pattern>
        <url-pattern>/404</url-pattern>
        <url-pattern/>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404</location>
    </error-page>
    <servlet-mapping>
        <servlet-name>CtrLogin</servlet-name>
        <url-pattern>/CtrLogin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrCompras</servlet-name>
        <url-pattern>/CtrCompras.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            -1
        </session-timeout>
    </session-config>
</web-app>
